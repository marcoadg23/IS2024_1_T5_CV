// Contenido de script.js
var activeSection = null;

function toggleDetails(className) {
    var details = document.querySelector('.' + className);

    details.classList.add('active');

    // Desplazar la pantalla hacia la secci贸n activa
    details.scrollIntoView({ behavior: 'smooth' });

    if (details === activeSection) {
        // Si se presiona el mismo bot贸n, ocultar la secci贸n
        details.classList.remove('active');
        activeSection = null;
    } else {
        // Ocultar la secci贸n activa actual y mostrar la nueva
        if (activeSection) {
            activeSection.classList.remove('active');
        }
        details.classList.add('active');
        activeSection = details;
    }
} 